#!/usr/bin/expect -f
set timeout 60
if {[file exists "deploy_secrets.exp"]} {
    source "deploy_secrets.exp"
} else {
    puts "Error: deploy_secrets.exp not found!"
    exit 1
}

spawn ssh -o StrictHostKeyChecking=no $user@$host "docker logs twitter-hot-backend-1 --tail 50"
expect {
    "password:" { send "$password\r"; exp_continue }
    eof
}
